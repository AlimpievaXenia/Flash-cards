<div class="mdl-layout mdl-js-layout mdl-color--grey-100">
  <main class="mdl-layout__content">
    <h1 class="h1">Регистрация</h1>
      <form id="regForm" action="/reg" method="post">
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
          <input class="mdl-textfield__input" type="text" id="username" name="firstName"/>
          <label class="mdl-textfield__label" for="username">Имя</label>
        </div>

        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
          <input class="mdl-textfield__input" type="text" id="username"/ name="lastName">
          <label class="mdl-textfield__label" for="username">Фамилия</label>
        </div>

        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
           <input class="mdl-textfield__input" type="text" pattern="[A-Z,a-z]*" id="username" name="login"/>
          <label class="mdl-textfield__label" for="username">Логин</label>
          <span class="mdl-textfield__error">Only alphabet and no spaces, please!</span>
        </div>

        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
          <input class="mdl-textfield__input" type="text" id="username"/ name="password">
          <label class="mdl-textfield__label" for="username">Пароль</label>
        </div>

      <input type="submit" value="зарегистрироваться">

    </form>
  </main>
</div>
